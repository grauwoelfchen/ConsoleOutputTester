<Page
    x:Class="ConsoleOuptutTester.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" SizeChanged="MainPage_OnSizeChanged">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition/>
    </Grid.RowDefinitions>
        <TextBlock Text="Resize this window to send events to Console Output" TextWrapping="Wrap" Margin="4"/>
        <TextBox x:Name="OutputBox" Header="Messages from Console Output" IsReadOnly="True" Grid.Row="1" Margin="4" AcceptsReturn="True"/>
    </Grid>
</Page>
